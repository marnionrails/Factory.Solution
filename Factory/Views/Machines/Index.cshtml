@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <p>There are currently no machines.</p>
}

<ul>
  @foreach (Machine machine in Model)
  {
    <p>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</p>
  }
</ul>

<div class="menu">
  <ul>
    <li>@Html.ActionLink("Add new machine","Create")</li>
    <li>@Html.ActionLink("Home","Index","Home")</li>
  </ul>
</div>